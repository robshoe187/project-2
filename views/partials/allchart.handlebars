<div class="col-sm-6">
    <canvas id="allChart" width="800" height="400"></canvas>
</div>


<script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/3.5.1/chart.min.js"></script>
<script>

    const batterChart = document.getElementById('allChart');

    Chart.defaults.global.defaultFontFamily = "Lato";
    Chart.defaults.global.defaultFontSize = 18;

    const batterData = {
        labels: ['Player Stats'],
        data: [{{ batter.average }}, {{ batter.hits }}, { { batter.home_runs } }, { { batter.rbi } }],        ],
    backgroundColor: 'red',
        borderWidth: 1,
            borderColor: 'black',
    };

    const leagueData = {
        label: 'League Average',
        data: [26, 42, 9, 218],
        backgroundColor: 'blue',
        borderWidth: 1,
        borderColor: 'black',
    };

    const categories = {
        labels: ['Batting Average', 'Hits', 'Home Runs', 'RBI'],
        datasets: [batterData, leagueData],
    };

    const batterConfig = {
        type: 'bar',
        data: categories,
        options: {
            responsive: false
        },
    }


    var allChart = new Chart(batterChart, batterConfig);

</script>